{
  "name": "star-commander",
  "version": "4.5.0",
  "description": "Discord voice relay for Star Citizen fleet operations",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --config.win.target=nsis",
    "build:msix": "electron-builder --win --config.win.target=appx",
    "build:all": "electron-builder --win"
  },
  "author": "KiFouine",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "discord.js": "^14.25.1",
    "electron-store": "^8.1.0",
    "libsodium-wrappers": "^0.7.13",
    "opusscript": "^0.0.8",
    "prism-media": "^1.3.5",
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.starcommander.app",
    "productName": "Star Commander",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
    "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "appx",
          "arch": ["x64"]
        }
      ],
      "publisherName": "CN=KiFouine",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "differentialPackage": false,
      "packElevateHelper": true,
      "runAfterFinish": true,
      "warningsAsErrors": false,
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "appx": {
      "applicationId": "StarCommander",
      "backgroundColor": "#0c1621",
      "displayName": "Star Commander",
      "identityName": "StarCommander",
      "publisher": "CN=KiFouine",
      "publisherDisplayName": "KiFouine",
      "languages": ["en-US", "fr-FR", "es-ES", "pt-PT", "ru-RU", "zh-CN", "ja-JP", "ar-SA"]
    }
  }
}