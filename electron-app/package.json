{
  "name": "star-commander",
  "version": "4.0.0",
  "description": "Discord voice relay for Star Citizen fleet operations",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "author": "Nicos",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "discord.js": "^14.14.1",
    "electron-store": "^8.1.0",
    "libsodium-wrappers": "^0.7.13",
    "opusscript": "^0.0.8",
    "prism-media": "^1.3.5"
  },
  "build": {
    "appId": "com.starcommander.app",
    "productName": "Star Commander",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
